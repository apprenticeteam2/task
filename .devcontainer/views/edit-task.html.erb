<%# encoding: UTF-8 %>
<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Time Task | 編集</title>
		<link rel="stylesheet" href="css/reset.css" />
		<link rel="stylesheet" href="css/global.css" />
		<link rel="stylesheet" href="css/header.css" />
		<link rel="stylesheet" href="css/edit-task.css" />
		<script src="https://kit.fontawesome.com/5ba856e811.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<%= render '_header' %>
		<main class="container">
			<h2>タスク編集</h2>
			<form action="">
				<div>
					<p>期間</p>
					<input class="form-time" type="time" name="start-time" />
					<input class="form-time" type="time" name="end-time" />
				</div>
				<div>
					<p>タスク</p>
					<input class="form-task" type="text" name="start-time" />
				</div>
				<input class="edit-button" type="submit" value="タスクを編集" />
				<button class="delete-button" type="button">タスクを削除</button>
			</form>
		</main>

		<script src="js/main.js"></script>
	</body>
</html>
