<%# encoding: UTF-8 %>
<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Time Task | 追加</title>
		<link rel="stylesheet" href="css/reset.css" />
		<link rel="stylesheet" href="css/global.css" />
		<link rel="stylesheet" href="css/header.css" />
		<link rel="stylesheet" href="css/add-task.css" />
		<script src="https://kit.fontawesome.com/5ba856e811.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<%= render '_header' %>
		<main class="container">
			<h2>タスク追加</h2>
			<form action="/api/task" method="post">
				<div>
					<p>期間</p>
					<input class="form-time" type="time" name="start_time" />
					<input class="form-time" type="time" name="end_time" />
				</div>
				<div>
					<p>タスク</p>
					<input class="form-task" type="text" name="name" />
				</div>
				<div>
					<p>最近追加したタスク</p>
					<select name="recent-task" id="recent-task">
						<option value="タスク1">タスク1</option>
						<option value="タスク2">タスク2</option>
						<option value="タスク3">タスク3</option>
					</select>
				</div>
				<input type="submit" value="追加" />
			</form>
		</main>

		<script src="js/main.js"></script>
	</body>
</html>
